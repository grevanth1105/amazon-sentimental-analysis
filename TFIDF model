2)\n\n# GridSearchCV for hyperparameter tuning\nprint(\"\\n🔍 Hyperparameter Tuning for MLPClassifier...\")\ngrid_search = GridSearchCV(mlp_classifier, param_grid, cv=3, scoring=\"accuracy\", n_jobs=-1)\ngrid_search.fit(X_train_tfidf[:subset_size], y_train_adjusted[:subset_size])\n\n# Best Model Evaluation\nbest_mlp = grid_search.best_estimator_\ny_pred_mlp = best_mlp.predict(X_test_tfidf)\n\n# Convert predictions back to original labels\ny_pred_mlp_original = y_pred_mlp + 1\n\n# Performance reporting\nprint(f\"\\n✅ Best MLP Model (hidden_layer_sizes={grid_search.best_params_['hidden_layer_sizes']}, \"\n      f\"activation={grid_search.best_params_['activation']}, solver={grid_search.best_params_['solver']}):\")\nprint(classification_report(y_test, y_pred_mlp_original))\naccuracy = accuracy_score(y_test, y_pred_mlp_original)\nprint(f\"🎯 MLPClassifier Accuracy: {accuracy:.4f}\")\n\n# Check memory usage\ncheck_memory()\n\n# Print total execution time\nprint(f\"\\n⏳ Total Execution Time: {time.time() - start_time:.2f} seconds\")","metadata":{"trusted":true,"execution":{"iopub.status.busy":"2025-02-11T16:12:07.667259Z","iopub.execute_input":"2025-02-11T16:12:07.667609Z"}},"outputs":[{"name":"stdout","text":"\n🔍 Hyperparameter Tuning for MLPClassifier...\n","output_type":"stream"}],"execution_count":null},{"cell_type":"code","source":"","metadata":{"trusted":true},"outputs":[],"execution_count":null}]}